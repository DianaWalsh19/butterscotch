<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Butterscotch</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
    <%= render '/layouts/header' %>
    
    <div class="container">
      <div class='content'>
        <p class='notice'><%= flash[:notice] %></p>
        <%= yield %>  
      </div>
      
      <div id='first-column'>
        <div class="loginbox">
          <h2 class="BoxHeaders">Login</h2>
        </div>
        
        <div class="searchbox">
          <h2 class="BoxHeaders">Search products</h2>
        </div>
      </div>
    </div>
    
    <%= render '/layouts/footer' %>

  </body>
</html>
